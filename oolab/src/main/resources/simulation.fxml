<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Enter Moves (e.g., f b l r): "/>
            <TextField fx:id="movesField" promptText="Moves"/>
            <Button fx:id="startButton" text="Start Simulation" onAction="#onSimulationStartClicked"/>
        </HBox>
    </top>

    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true"/>
    </center>
</BorderPane>
